{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "strict": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "~/*": ["./src/*"],
            "@/*": ["./src/*"]
        },
        "typeRoots": ["src/types", "node_modules/@types"]
    },
    "include": ["src/**/*"]
}
